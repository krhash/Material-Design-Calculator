<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krush.calc_kr.CalcActivity"
    android:theme="@style/AppTheme"
    android:background="@android:color/background_dark"
    android:padding="0dp">


    <Switch
        android:text="Scientific Mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_scientific"
        android:textOn="ON"
        android:textOff="OFF"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:thumbTint="@color/colorPrimary"
        android:trackTint="#ffffff"
        android:textColor="@android:color/background_light"
        android:button="@android:color/darker_gray"
        android:buttonTint="@android:color/darker_gray"
        android:background="@android:color/black"
        android:trackTintMode="src_over"
        android:checked="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_scientific">

        <Button
                android:id="@+id/btn_sin"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="sin"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f"
            android:layout_weight="1" />

        <Button
                android:id="@+id/btn_cos"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="cos"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f"
            android:layout_weight="1" />

        <Button
                android:id="@+id/btn_tan"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="tan"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f"
            android:layout_weight="1" />

        <Button
                android:id="@+id/btn_log"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="log"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_opt"
        android:background="#ffffff"
        android:paddingRight="10dp"
        android:textDirection="ltr"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="monospace"
        android:textSize="24sp"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:textColorLink="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="28sp"
        android:fontFamily="monospace"
        android:textAlignment="viewEnd"
        android:paddingTop="60dp"
        android:textDirection="ltr"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:columnCount="4">

            <Button
                android:id="@+id/btn_mplus"
                android:layout_height="wrap_content"
                android:text="M+"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#befffcfc"
                android:backgroundTint="#e76f94f1"
                android:layout_width="95dp" />

            <Button
                android:id="@+id/btn_mminus"
                android:layout_height="wrap_content"
                android:text="M-"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#befffcfc"
                android:backgroundTint="#e76f94f1"
                android:layout_width="95dp" />

            <Button
                android:id="@+id/btn_mRecall"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="MRC"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#befffcfc"
                android:backgroundTint="#e76f94f1"/>

            <Button
                android:id="@+id/btn_mClear"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="MCL"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#befffcfc"
                android:backgroundTint="#e76f94f1"/>

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f" />

            <Button
                android:id="@+id/btn_sqrt"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="\u221A"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f" />

            <Button
                android:id="@+id/btn_clr"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="CLR"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3918f8f" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="95dp"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#ccffffff"
                android:backgroundTint="#df18cc48" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#ccffffff"
                android:backgroundTint="#df18cc48" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#ccffffff"
                android:backgroundTint="#df18cc48" />

            <Button
                android:id="@+id/btn_decimal"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#b3454444" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:text="รท"
                android:textColor="#ffffff"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#ccffffff"
                android:backgroundTint="#df18cc48" />


        </GridLayout>

    </LinearLayout>


</LinearLayout>
